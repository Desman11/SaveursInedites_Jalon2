{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            // Définit le niveau de log global sur Debug.

            "Microsoft.AspNetCore": "Debug",
            // Active des logs détaillés pour les composants ASP.NET Core.

            "Microsoft.AspNetCore.Authentication": "Trace",
            // Active des logs très détaillés pour tout ce qui touche à l’authentification (utile pour JWT).

            "Microsoft.Hosting.Lifetime": "Trace"
            // Journalise les événements importants du cycle de vie de l’hébergement (démarrage, arrêt).
        }
    },

    "AllowedHosts": "*",
    // Autorise n’importe quel hôte à accéder à l’application (utile en développement).

    "DatabaseSettings": {
        "DatabaseProviderName": "PostgreSQL",
        // Indique à l'application quel provider de base de données utiliser.

        "ConnectionString": "Host=localhost;database=saveurs_inedites2;uid=postgres;Pwd=password;Port=5435",
        // Chaîne de connexion principale vers PostgreSQL.

        "MySQL": "Server=localhost;database=recette;Uid=root;",
        // Chaîne de connexion alternative pour MySQL (non utilisée ici mais disponible).

        "PostgreSQL": "Host=localhost;database=saveurs_inedites2;uid=postgres;Pwd=password;Port=5435"
        // Chaîne dédiée lorsque PostgreSQL est explicitement sélectionné.
    },

    "JwtSettings": {
        "Secret": "MaSuperCléUltraSecrèteDe32Caractères!",
        // Clé secrète utilisée pour signer les tokens JWT (doit être longue et sécurisée).

        "Issuer": "MonApi_Recette",
        // Identifie l’émetteur du token (API).

        "Audience": "MonClient_WinForm",
        // Identifie qui est censé consommer le token (client WinForms).

        "ExpirationMinutes": 60
        // Durée de validité du token en minutes.
    }
}
